<Window x:Class="NewChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewChat"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinWidth="640" MinHeight="480">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Background="LemonChiffon" Margin="10" TextWrapping="Wrap" Text="TextBox" />
        <TextBox Margin="10" TextWrapping="Wrap" Text="TextBox" Grid.Row="1" Grid.Column="0" />
        <Button Content="Button" Margin="10" Grid.Row="1" Grid.Column="1"/>

    </Grid>
</Window>
